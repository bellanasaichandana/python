n=int(input("Enter how numbers your want "))
num=int(input("Enter any number ")) 
largest=num 
smallest=num
i=1
while(i<n):
    num=int(input("Enter any number "))
    if(num>largest):
        largest=num 
    elif(num<smallest):
        smallest=num
    i=i+1 
print('difference', largest-smallest)
